<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_stocktaking_plan_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            app:layout_scrollFlags="scroll"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_stocktaking_plan_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_stocktaking_plan_toolbar_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/stocktaking_running"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/activity_stocktaking_plan_tv_start_inventory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/tool_bar_tv_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/start_stocktaking"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_marginTop="56dp"
                android:padding="8dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/plan_number"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"/>

                <TextView
                    android:id="@+id/activity_stocktaking_plan_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/stocktaking_plan"
                    android:paddingStart="8dp"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="92dp"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="end"
                    android:text="@string/stocktaking_data"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"/>
                <TextView
                    android:id="@+id/activity_stocktaking_plan_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/hint_date"
                    android:paddingStart="8dp"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="124dp"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="@string/stocktaking_person"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"/>

                <TextView
                    android:id="@+id/activity_stocktaking_plan_tv_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_person"
                    android:paddingStart="8dp"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"/>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/activity_stocktaking_plan_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@color/colorWhite"
            app:tabIndicatorColor="#f92e2e"
            app:tabMode="fixed">

            <android.support.design.widget.TabItem
                android:id="@+id/tab_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/tab_layout_item"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tab_item2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout="@layout/tab_layout_item2"/>
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/colorWhite"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_stocktaking_plan_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            >
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
